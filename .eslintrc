{
    "env": {
        "browser": true,
        "jquery": true,
        "node": true
    },

    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "forOf": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralDuplicateProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "spread": true,
        "superInFunctions": true,
        "templateStrings": true,
        "jsx": true
    },

    "rules": {
        "block-scoped-var": 2,
        "brace-style": 2,
        "comma-style": 2,
        "curly": [2, "multi-line"],
        "global-strict": 0,
        "indent": 2,
        "no-else-return": 2,
        "no-extra-parens": 2,
        "no-lonely-if": 2,
        "no-self-compare": 2,
        "no-undefined": 2,
        "no-unused-expressions": 0,
        "operator-assignment": 2,
        "quotes": [2, "single", "avoid-escape"],
        "radix": 2,
        "space-after-keywords": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "strict": [2, "global"],
        "vars-on-top": 2,
    }
}
